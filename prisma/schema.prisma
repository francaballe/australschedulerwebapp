generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  schemas           = ["app"]
}

model User {
  id             Int                  @id @default(autoincrement())
  email          String?              @unique
  password       String?
  firstname      String?
  lastname       String?
  lastlogin      DateTime?            @db.Timestamptz(6)
  createddate    DateTime             @default(now()) @db.Timestamptz(6)
  isblocked      Boolean?             @default(false)
  userroleid     Int?
  phone          String?
  siteid         Int?                 @default(1)
  confirmedWeeks ConfirmedWeek[]
  messages       Message[]
  shifts         Shift[]
  pushTokens     UserPushToken[]
  unavailability UserUnavailability[]
  site           Site?                @relation(fields: [siteid], references: [id])
  role           Role?                @relation(fields: [userroleid], references: [id])

  @@map("users")
  @@schema("app")
}

model Role {
  id    Int     @id
  name  String?
  users User[]

  @@map("roles")
  @@schema("app")
}

model Site {
  id    Int     @id @default(autoincrement())
  name  String?
  users User[]

  @@map("sites")
  @@schema("app")
}

model Position {
  id         Int       @id @default(autoincrement())
  name       String?
  color      String?
  starttime  DateTime? @db.Time(6)
  endtime    DateTime? @db.Time(6)
  eliminated Boolean?  @default(false)
  shifts     Shift[]

  @@map("positions")
  @@schema("app")
}

model Shift {
  id          Int       @id @default(autoincrement())
  date        DateTime  @db.Date
  positionId  Int?      @map("position_id")
  published   Boolean   @default(false)
  userId      Int       @map("user_id")
  toBeDeleted Boolean   @default(false) @map("to_be_deleted")
  starttime   DateTime? @db.Time(6)
  endtime     DateTime? @db.Time(6)
  position    Position? @relation(fields: [positionId], references: [id])
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("shifts")
  @@schema("app")
}

model UserUnavailability {
  id     Int      @id @default(autoincrement())
  userId Int      @map("user_id")
  date   DateTime @db.Date
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("user_unavailability")
  @@schema("app")
}

model UserPushToken {
  id        Int       @id @default(autoincrement())
  userId    Int?      @map("user_id")
  token     String
  createdAt DateTime? @default(now()) @map("created_at") @db.Timestamp(6)
  user      User?     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, token])
  @@map("user_push_tokens")
  @@schema("app")
}

model Message {
  id        Int       @id @default(autoincrement())
  userId    Int       @map("user_id")
  title     String    @db.VarChar(255)
  body      String
  read      Boolean?  @default(false)
  createdAt DateTime? @default(now()) @map("created_at") @db.Timestamp(6)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([createdAt(sort: Desc)], map: "idx_messages_created_at")
  @@index([userId], map: "idx_messages_user_id")
  @@index([userId, read], map: "idx_messages_user_unread")
  @@map("messages")
  @@schema("app")
}

model ConfirmedWeek {
  id        Int      @id @default(autoincrement())
  date      DateTime @db.Date
  confirmed Boolean  @default(false)
  userId    Int      @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("confirmedweeks")
  @@schema("app")
}
